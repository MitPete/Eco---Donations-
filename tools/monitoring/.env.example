# Production Monitoring Configuration
# Copy this file to .env in the monitoring directory

# Network Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
NETWORK_NAME=mainnet

# Contract Addresses (update with actual deployed addresses)
DONATION_CONTRACT_ADDRESS=0x...
ECOCOIN_CONTRACT_ADDRESS=0x...
GOVERNANCE_CONTRACT_ADDRESS=0x...
MULTISIG_WALLET_ADDRESS=0x...
AUTO_DONATION_CONTRACT_ADDRESS=0x...

# Wallet Addresses to Monitor
FOUNDATION_WALLET=0x...
TREASURY_WALLET=0x...
OPERATIONS_WALLET=0x...

# Alert Thresholds
MAX_GAS_PRICE_GWEI=100
MIN_WALLET_BALANCE_ETH=0.1
MAX_RESPONSE_TIME_MS=5000
ERROR_RATE_THRESHOLD=0.05

# Frontend URL
FRONTEND_URL=https://ecodonations.org

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
ALERT_EMAIL=alerts@ecodonations.org

# Monitoring Intervals
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_RETENTION_DAYS=30

# Dashboard Configuration
MONITORING_PORT=3002
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure_password_here

# External Services
ETHERSCAN_API_KEY=your_etherscan_api_key
INFURA_PROJECT_ID=your_infura_project_id

# Emergency Contacts
EMERGENCY_CONTACT_1=+1234567890
EMERGENCY_CONTACT_2=admin@ecodonations.org
