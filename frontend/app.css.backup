/**
 * Eco Donations - Complete CSS Styles
 * @author Eco Donations Team
 * @version 3.0.0
 * Unified single file approach - all sections working
 */

/* ═══════════════════════════════════════════════════════════════════════════════════════════ */
/* BASE STYLES & RESET */
/* ═══════════════════════════════════════════════════════════════════════════════════════════ */

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #333;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

:root {
  /* Brand Colors */
  --brand-1: #28c76f;
  --brand-2: #0066ff;
  --brand-primary: #28c76f;
  --brand-secondary: #0066ff;
  --brand-success: #22c55e;
  --brand-warning: #f59e0b;
  --brand-error: #ef4444;
  --brand-info: #3b82f6;

  /* Background Colors */
  --bg-light: #e5fbea;
  --bg-dark: #e8f1ff;
  --bg-white: #ffffff;
  --bg-gray-50: #f9fafb;
  --bg-gray-100: #f3f4f6;
  --bg-gray-200: #e5e7eb;

  /* Text Colors */
  --text-primary: #1b1e25;
  --text-secondary: #6b7280;
  --text-muted: #9ca3af;
  --text-light: #e8ecf1;
  --text-white: #ffffff;
  --text-dark: #1b1e25;

  /* Interactive Colors */
  --interactive-primary: var(--brand-primary);
  --interactive-secondary: var(--brand-secondary);
  --interactive-hover: #1ca25e;
  --interactive-disabled: #d1d5db;

  /* UI Elements */
  --border-radius: 14px;
  --border-radius-sm: 8px;
  --border-radius-lg: 20px;
  --border-radius-full: 9999px;
  --radius: 14px;

  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  --shadow-primary: 0 12px 32px rgba(0, 0, 0, 0.08);

  /* Glass Effect */
  --glass-bg: rgba(255, 255, 255, 0.6);
  --glass-border: rgba(255, 255, 255, 0.2);
  --glass-blur: blur(18px);

  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.25s ease;
  --transition-slow: 0.3s ease;
  --transition-bounce: 0.25s cubic-bezier(0.4, 0.2, 0.2, 1);

  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  --spacing-3xl: 4rem;

  /* Typography */
  --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-size-3xl: 1.875rem;
  --font-size-4xl: 2.25rem;
  --font-size-5xl: 3rem;

  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-extrabold: 800;

  /* Legacy variable aliases for compatibility */
  --brand-1: var(--brand-primary);
  --brand-2: var(--brand-secondary);
  --radius: var(--border-radius);
  --shadow: var(--shadow-primary);
  --glass-bg: rgba(255, 255, 255, 0.6);
  --glass-blur: blur(18px);
  --transition: var(--transition-base);
  --text-dark: var(--text-primary);
  --text-light: var(--text-white);

  /* Additional UI Variables */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
  --z-toast: 1080;

  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */
  /* TRANSITIONS & ANIMATIONS */
  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */

  --transition-base: all 0.25s cubic-bezier(0.4, 0.2, 0.2, 1);
  --transition-fast: all 0.15s cubic-bezier(0.4, 0.2, 0.2, 1);
  --transition-slow: all 0.35s cubic-bezier(0.4, 0.2, 0.2, 1);

  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */
  /* SPACING SYSTEM */
  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */

  --spacing-xs: 0.25rem;   /* 4px */
  --spacing-sm: 0.5rem;    /* 8px */
  --spacing-md: 1rem;      /* 16px */
  --spacing-lg: 1.5rem;    /* 24px */
  --spacing-xl: 2rem;      /* 32px */
  --spacing-2xl: 3rem;     /* 48px */
  --spacing-3xl: 4rem;     /* 64px */

  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */
  /* TYPOGRAPHY SYSTEM */
  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */

  --font-size-xs: 0.75rem;     /* 12px */
  --font-size-sm: 0.875rem;    /* 14px */
  --font-size-md: 1rem;        /* 16px */
  --font-size-lg: 1.125rem;    /* 18px */
  --font-size-xl: 1.25rem;     /* 20px */
  --font-size-2xl: 1.5rem;     /* 24px */
  --font-size-3xl: 1.875rem;   /* 30px */
  --font-size-4xl: 2.25rem;    /* 36px */
  --font-size-5xl: 3rem;       /* 48px */
  --font-size-6xl: 3.75rem;    /* 60px */

  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-extrabold: 800;

  --line-height-tight: 1.25;
  --line-height-normal: 1.5;
  --line-height-loose: 1.75;

  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */
  /* SHADOW SYSTEM */
  /* ═══════════════════════════════════════════════════════════════════════════════════════════ */

  --shadow-primary: 0 12px 32px rgba(0, 0, 0, 0.08);
  --shadow-secondary: 0 4px 16px rgba(0, 0, 0, 0.06);
  --shadow-tertiary: 0 2px 8px rgba(0, 0, 0, 0.04);

  /* Dark Mode Variables */
@media (prefers-color-scheme: dark) {
  :root {
    --bg-light: #0f172a;
    --bg-dark: #111827;
    --bg-white: #1f2937;
    --bg-gray-50: #374151;
    --bg-gray-100: #4b5563;
    --bg-gray-200: #6b7280;

    --text-primary: #f9fafb;
    --text-secondary: #d1d5db;
    --text-muted: #9ca3af;

    --glass-bg: rgba(30, 41, 59, 0.55);
    --shadow-primary: 0 12px 32px rgba(0, 0, 0, 0.5);
  }

  body {
    color: var(--text-primary);
  }

  h1, h2, h3, h4, h5, h6 {
    color: var(--text-primary);
  }
}

/* ═══════════════════════════════════════════════════════════════════════════════════════════ */
/* RESET & BASE STYLES */
/* ═══════════════════════════════════════════════════════════════════════════════════════════ */

/* Global Reset */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Body Styles */
body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: var(--text-primary);
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-dark) 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* HTML reset */
html {
  scroll-behavior: smooth;
}

/* Links */
a {
  color: var(--interactive-primary);
  text-decoration: none;
  transition: var(--transition-base);
}

a:hover {
  color: var(--interactive-hover);
}

/* Headings */
h1, h2, h3, h4, h5, h6 {
  font-weight: var(--font-weight-semibold);
  line-height: 1.3;
  color: var(--text-primary);
}

h1 {
  font-size: var(--font-size-4xl);
}

h2 {
  font-size: var(--font-size-3xl);
}

h3 {
  font-size: var(--font-size-2xl);
}

h4 {
  font-size: var(--font-size-xl);
}

h5 {
  font-size: var(--font-size-lg);
}

h6 {
  font-size: var(--font-size-md);
}

/* Paragraph */
p {
  margin-bottom: var(--spacing-md);
}

/* Images */
img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Lists */
ul, ol {
  padding-left: var(--spacing-lg);
}

li {
  margin-bottom: var(--spacing-xs);
}

/* Focus States */
:focus {
  outline: 2px solid var(--interactive-primary);
  outline-offset: 2px;
}

:focus:not(:focus-visible) {
  outline: none;
}

/* Selection */
::selection {
  background-color: var(--interactive-primary);
  color: var(--text-white);
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-gray-100);
}

::-webkit-scrollbar-thumb {
  background: var(--bg-gray-200);
  border-radius: var(--border-radius-sm);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-muted);
}

/* ═══════════════════════════════════════════════════════════════════════════════════════════ */
/* UTILITY CLASSES */
/* ═══════════════════════════════════════════════════════════════════════════════════════════ */

/* Display */
.hidden { display: none !important; }
.block { display: block !important; }
.inline { display: inline !important; }
.inline-block { display: inline-block !important; }
.flex { display: flex !important; }
.inline-flex { display: inline-flex !important; }
.grid { display: grid !important; }

/* Flexbox */
.flex-row { flex-direction: row !important; }
.flex-col { flex-direction: column !important; }
.flex-wrap { flex-wrap: wrap !important; }
.flex-nowrap { flex-wrap: nowrap !important; }
.items-start { align-items: flex-start !important; }
.items-center { align-items: center !important; }
.items-end { align-items: flex-end !important; }
.justify-start { justify-content: flex-start !important; }
.justify-center { justify-content: center !important; }
.justify-end { justify-content: flex-end !important; }
.justify-between { justify-content: space-between !important; }
.justify-around { justify-content: space-around !important; }

/* Spacing */
.m-0 { margin: 0 !important; }
.m-1 { margin: var(--spacing-sm) !important; }
.m-2 { margin: var(--spacing-md) !important; }
.m-3 { margin: var(--spacing-lg) !important; }
.m-4 { margin: var(--spacing-xl) !important; }
.m-auto { margin: auto !important; }

.p-0 { padding: 0 !important; }
.p-1 { padding: var(--spacing-sm) !important; }
.p-2 { padding: var(--spacing-md) !important; }
.p-3 { padding: var(--spacing-lg) !important; }
.p-4 { padding: var(--spacing-xl) !important; }

/* Text */
.text-left { text-align: left !important; }
.text-center { text-align: center !important; }
.text-right { text-align: right !important; }
.text-justify { text-align: justify !important; }

.text-xs { font-size: var(--font-size-xs) !important; }
.text-sm { font-size: var(--font-size-sm) !important; }
.text-base { font-size: var(--font-size-base) !important; }
.text-lg { font-size: var(--font-size-lg) !important; }
.text-xl { font-size: var(--font-size-xl) !important; }
.text-2xl { font-size: var(--font-size-2xl) !important; }
.text-3xl { font-size: var(--font-size-3xl) !important; }
.text-4xl { font-size: var(--font-size-4xl) !important; }
.text-5xl { font-size: var(--font-size-5xl) !important; }

.font-normal { font-weight: var(--font-weight-normal) !important; }
.font-medium { font-weight: var(--font-weight-medium) !important; }
.font-semibold { font-weight: var(--font-weight-semibold) !important; }
.font-bold { font-weight: var(--font-weight-bold) !important; }
.font-extrabold { font-weight: var(--font-weight-extrabold) !important; }

.text-primary { color: var(--text-primary) !important; }
.text-secondary { color: var(--text-secondary) !important; }
.text-muted { color: var(--text-muted) !important; }
.text-white { color: var(--text-white) !important; }

/* Borders */
.rounded-none { border-radius: 0 !important; }
.rounded-sm { border-radius: var(--border-radius-sm) !important; }
.rounded { border-radius: var(--border-radius) !important; }
.rounded-lg { border-radius: var(--border-radius-lg) !important; }
.rounded-full { border-radius: var(--border-radius-full) !important; }

/* Shadows */
.shadow-none { box-shadow: none !important; }
.shadow-sm { box-shadow: var(--shadow-sm) !important; }
.shadow { box-shadow: var(--shadow-md) !important; }
.shadow-lg { box-shadow: var(--shadow-lg) !important; }
.shadow-xl { box-shadow: var(--shadow-xl) !important; }
.shadow-2xl { box-shadow: var(--shadow-2xl) !important; }

/* Responsive Utilities */
@media (max-width: 768px) {
  .hide-mobile { display: none !important; }
  .show-mobile { display: block !important; }
  .show-mobile-flex { display: flex !important; }
  .show-mobile-grid { display: grid !important; }
}

@media (min-width: 769px) {
  .hide-desktop { display: none !important; }
  .show-desktop { display: block !important; }
  .show-desktop-flex { display: flex !important; }
  .show-desktop-grid { display: grid !important; }
}
/**
 * Button Component Styles
 * @description Reusable button styles for the Eco Donations DApp
 */

/* Base button styles */
button,
.cta,
.cta-primary,
.cta-secondary,
.foundation-cta,
.mini-cta,
.refresh-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--radius);
  font-family: inherit;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  cursor: pointer;
  transition: var(--transition);
  white-space: nowrap;
  min-height: 44px;
  min-width: 44px;
}

/* Primary button */
.cta,
.cta-primary {
  background: var(--brand-1);
  color: white;
}

.cta:hover,
.cta-primary:hover {
  background: #1ca25e;
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

/* Secondary button */
.cta-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
}

.cta-secondary:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

/* Default button */
button {
  background: var(--brand-2);
  color: white;
}

button:hover {
  background: #0050d4;
  transform: translateY(-2px);
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.16);
}

button:disabled {
  background: #95a5b4;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Foundation card buttons */
.foundation-cta,
.mini-cta {
  background: var(--brand-2);
  color: white;
  font-size: 0.9rem;
  padding: 0.5rem 1.2rem;
  border-radius: 999px;
  margin-top: auto;
}

.foundation-cta:hover,
.mini-cta:hover {
  background: #0050d4;
  transform: translateY(-2px);
}

/* Refresh button */
.refresh-btn {
  background: rgba(255, 255, 255, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: white;
  backdrop-filter: blur(10px);
}

.refresh-btn:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(-2px);
}

/* Quick amount buttons */
.quick-amount {
  background: var(--glass-bg);
  color: var(--text-dark);
  border: 2px solid var(--brand-2);
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  border-radius: var(--radius);
  backdrop-filter: var(--glass-blur);
}

.quick-amount:hover,
.quick-amount.active {
  background: var(--brand-2);
  color: white;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  button,
  .cta,
  .foundation-cta,
  .quick-amount {
    min-height: 44px;
    min-width: 44px;
  }

  .hero-actions {
    flex-direction: column;
    align-items: center;
  }

  .cta-primary,
  .cta-secondary {
    width: 100%;
    max-width: 280px;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .quick-amount {
    background: var(--glass-bg);
    color: var(--text-light);
    border-color: var(--brand-2);
  }

  .quick-amount:hover,
  .quick-amount.active {
    background: var(--brand-2);
    color: white;
  }
}
/**
 * Card Component Styles
 * @description Reusable card styles for the Eco Donations DApp
 */

/* Base card */
.card {
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  border-radius: var(--radius);
  padding: 2.4rem;
  box-shadow: var(--shadow);
  margin-bottom: 2.4rem;
  position: relative;
  animation: fadeUp 0.5s ease-out;
}

/* Foundation cards */
.foundation {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 1.8rem 1.4rem;
  background: white;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  transition: transform var(--transition), box-shadow var(--transition);
  transform-style: preserve-3d;
  perspective: 800px;
}

.foundation:hover {
  transform: translateY(-8px);
  box-shadow: 0 14px 32px rgba(0, 0, 0, 0.14);
}

.foundation img {
  width: 76px;
  height: 76px;
  margin-bottom: 1.1rem;
  border-radius: 50%;
  object-fit: contain;
  border: 5px solid transparent;
  transition: border-color var(--transition), transform var(--transition);
}

.foundation:hover img {
  border-color: var(--brand-2);
  transform: scale(1.06);
}

.foundation h4 {
  margin: 0.3rem 0 0.6rem;
  font-weight: 700;
  color: var(--text-dark);
}

.foundation p {
  font-size: 0.92rem;
  color: #475569;
  margin: 0 0 1.4rem;
  line-height: 1.5;
}

/* Metric cards */
.metric {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.45rem;
  padding: 1.6rem;
  background: white;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  transform-style: preserve-3d;
  perspective: 800px;
}

.metric i {
  font-size: 1.7rem;
  color: var(--brand-2);
}

.metric .num {
  font-size: 1.7rem;
  font-weight: 800;
  color: var(--text-dark);
}

.metric .label {
  font-size: 0.8rem;
  letter-spacing: 0.6px;
  color: #64748b;
  text-transform: uppercase;
  font-weight: 500;
}

/* Stat cards */
.stat-card {
  background: white;
  border-radius: var(--radius);
  padding: 1.5rem;
  box-shadow: var(--shadow);
  display: flex;
  align-items: center;
  gap: 1rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.stat-icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: white;
}

.stat-content {
  flex: 1;
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 0.25rem;
}

.stat-label {
  font-size: 0.9rem;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

/* Impact cards */
.impact-card {
  background: white;
  border-radius: var(--radius);
  padding: 2.5rem;
  text-align: center;
  box-shadow: var(--shadow);
  transition: var(--transition);
}

.impact-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.impact-icon {
  font-size: 3rem;
  color: var(--brand-1);
  margin-bottom: 1.5rem;
}

.impact-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--text-dark);
}

.impact-card p {
  color: #6b7280;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

/* Stat item for banners */
.stat-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.5rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius);
  backdrop-filter: blur(10px);
  transition: var(--transition);
}

.stat-item:hover {
  transform: translateY(-4px);
  background: rgba(255, 255, 255, 0.15);
}

.stat-item .stat-icon {
  font-size: 2.5rem;
  color: rgba(255, 255, 255, 0.9);
  width: auto;
  height: auto;
  border-radius: 0;
  background: none;
}

