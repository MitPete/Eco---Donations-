  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eco-donations/frontend/issues"
  },
  "homepage": "https://github.com/eco-donations/frontend#readme",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "express": "^5.1.0"
  },
  "browserslist": [
