# Eco Donations Platform - Comprehensive Environment Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control

# ====== NETWORK CONFIGURATION ======
# Sepolia Testnet RPC URL (recommended for testing)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Goerli Testnet RPC URL (backup testnet)
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Mainnet RPC URL (for production deployment)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Local Development Network
LOCAL_RPC_URL=http://127.0.0.1:8545

# ====== DEPLOYMENT CONFIGURATION ======
# Private key for deployment (KEEP SECURE! Use dedicated deploy wallet)
PRIVATE_KEY=your_private_key_here

# Alternative: Mnemonic phrase (12 words)
MNEMONIC=your twelve word mnemonic phrase here

# Current deployment network
DEPLOYMENT_NETWORK=sepolia
CONTRACT_DEPLOYMENT_STATUS=development

# ====== CONTRACT VERIFICATION ======
# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ====== GAS CONFIGURATION ======
# CoinMarketCap API key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas settings (in gwei)
GAS_PRICE=20
MAX_FEE_PER_GAS=50
MAX_PRIORITY_FEE_PER_GAS=2

# Enable gas reporting
REPORT_GAS=true

# ====== FRONTEND CONFIGURATION ======
# Development server
FRONTEND_PORT=8888
VITE_APP_ENV=development

# Contract addresses (populated after deployment)
VITE_CONTRACT_ADDRESS_DONATION=0x0000000000000000000000000000000000000000
VITE_CONTRACT_ADDRESS_ECOCOIN=0x0000000000000000000000000000000000000000
VITE_CONTRACT_ADDRESS_GOVERNANCE=0x0000000000000000000000000000000000000000
VITE_CONTRACT_ADDRESS_MULTISIG=0x0000000000000000000000000000000000000000

# Network settings for frontend
VITE_NETWORK_NAME=sepolia
VITE_NETWORK_CHAIN_ID=11155111
VITE_NETWORK_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY_HERE

# ====== SECURITY & ANALYSIS ======
# MythX API key for security analysis
MYTHX_API_KEY=your_mythx_api_key_here

# Slither configuration
SLITHER_ENABLED=true

# ====== FOUNDATION ADDRESSES ======
# Update these with real foundation wallet addresses
FOUNDATION_SAVE_THE_OCEANS=0x1111111111111111111111111111111111111111
FOUNDATION_PROTECT_RAINFOREST=0x2222222222222222222222222222222222222222
FOUNDATION_PROTECT_SEQUOIAS=0x3333333333333333333333333333333333333333
FOUNDATION_CLEAN_ENERGY=0x4444444444444444444444444444444444444444

# ====== MULTI-SIGNATURE CONFIGURATION ======
# Multi-sig wallet owners (comma-separated)
MULTISIG_OWNERS=0xOwner1,0xOwner2,0xOwner3
MULTISIG_REQUIRED_CONFIRMATIONS=2

# ====== DEVELOPMENT & TESTING ======
NODE_ENV=development
DEBUG=true
TEST_TIMEOUT=60000
RUN_COVERAGE=true

# ====== MONITORING & NOTIFICATIONS ======
# Discord webhook for deployment notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Sentry DSN for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ====== DATABASE (Optional) ======
# For analytics and user data
DATABASE_URL=postgresql://user:password@localhost:5432/ecodonations
REDIS_URL=redis://localhost:6379

# ====== IPFS CONFIGURATION ======
# For metadata and file storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# ====== FEATURE FLAGS ======
FEATURE_AUTO_DONATIONS=true
FEATURE_GOVERNANCE=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# ====== BACKUP & RECOVERY ======
# Emergency backup configuration
BACKUP_PRIVATE_KEY=your_backup_private_key_here
RECOVERY_PHRASE=your recovery phrase here

# ====== PERFORMANCE SETTINGS ======
CACHE_TTL=3600
MAX_FILE_SIZE=10
API_RATE_LIMIT=100
